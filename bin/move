#!/usr/bin/env ruby

require_relative '../lib/move.rb'

puts "-----------   -----------   -----------"
puts "-----------   -----------   -----------"
puts "   -----         -----      ---        "
puts "   -----         -----      ---        "
puts "   -----         -----      ---        "
puts "   -----         -----      ---        "
puts "   -----      -----------   -----------"
puts "   -----      -----------   -----------"

puts "--------------TIC TAC TOE   -----------"
puts "                                       "
puts "                                       "
puts "               # | # | # "
puts "              -----------"
puts "               # | # | # "
puts "              -----------"
puts "               # | # | # "
puts "                                       "
puts "Welcome to Tic Tac Toe!
Where would you like to go?"

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

input = gets.strip

index = input_to_index(input)

move(board, index, "X")

display_board(board)

